# Load configuration files with error handling
load_config() {
    local config_dir="$1"
    [[ -d "$config_dir" ]] || return
    for config_file in "$config_dir"/**/*.zsh(N); do
        [[ -r "$config_file" ]] && source "$config_file" 2>/dev/null || echo "‚ö†Ô∏è  Error loading: $config_file" >&2
    done
}

